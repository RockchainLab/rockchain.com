files:
    "/etc/httpd/conf.d/ssl_rewrite.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            RewriteCond %{HTTP_HOST} ^rockchain.com
            RewriteRule ^robots\.txt$ robots-on.txt [NS, NC]

            RewriteCond %{REQUEST_FILENAME} !-d
            RewriteCond %{DOCUMENT_ROOT}/$1\.php -f [NC]
            RewriteRule ^(.+?)/?$ /$1.php [L]
